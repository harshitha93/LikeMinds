<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/drawer_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/prof_pic_sachin_blur"
        android:id="@+id/drawer_header_blur_imageView" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_header_profile_pic"
        android:layout_marginLeft="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_pic_sachin"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/drawer_header_profile_name" />

    <TextView
        android:id="@+id/drawer_header_profile_name"
        android:layout_above="@+id/drawer_header_profile_email"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/primary_text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sachin Verma"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/drawer_header_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:text="sachin@incture.com"
        android:layout_centerHorizontal="true" />

</RelativeLayout>