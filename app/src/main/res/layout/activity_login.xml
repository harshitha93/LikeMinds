<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landing_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"><requestFocus/></FrameLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--android:text="HRSocial"-->
        <!--android:id="@+id/textView"-->

        <!--android:textSize="50sp"-->
        <!--android:theme="@style/Base.TextAppearance.AppCompat.Large.Inverse"-->
        <!--android:textStyle="bold"-->
        <!--android:gravity="center_vertical|center_horizontal"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_above="@+id/form"/>-->


    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#66000000"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    <LinearLayout
        android:padding="10dp"

        android:id="@+id/form"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:src="@drawable/hr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>


        <android.support.design.widget.TextInputLayout
            android:padding="10dp"
            app:hintTextAppearance="@style/TextLabel"
            android:id="@+id/username_layout"
            android:background="@drawable/background_text_round_corners_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:layout_marginTop="10dp"


            >

                <android.support.v7.widget.AppCompatEditText
                    android:drawableTint="@color/dim"
                    android:drawableRight="@drawable/ic_person_black_18dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/username"
                    android:hint="User Name"
                    android:inputType="textEmailAddress|textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:background="@android:color/transparent"
                     />

        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <android.support.design.widget.TextInputLayout
            android:padding="10dp"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_below="@id/username_layout"
            android:id="@+id/password_layout"
            android:background="@drawable/background_text_round_corners_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|fill_vertical"
            android:alpha="0.8"
            android:layout_marginBottom="10dp">

                <android.support.v7.widget.AppCompatEditText

                    android:drawableTint="@color/dim"
                    android:drawableRight="@drawable/ic_lock_black_18dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            style="@style/Raised.Button"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/action_ok"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true"

            android:alpha="1"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>


